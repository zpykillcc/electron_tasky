{
  "name": "tasky",
  "version": "1.0.1",
  "description": "A simple electron project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon --watch index.js --exec electron .",
    "build-icon": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "pack": "electron-builder",
    "release": "cross-env GH_TOKEN=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 electron-builder"
  },
  "author": "zpykillcc",
  "license": "ISC",
  "dependencies": {
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.6",
    "animejs": "^3.2.1",
    "body-parser": "^1.20.2",
    "chimee": "^0.12.0",
    "electron-updater": "^5.3.0",
    "element-ui": "^2.15.13",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "hls.js": "^1.3.5",
    "jquery": "^3.6.3"
  },
  "devDependencies": {
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "nodemon": "^2.0.20"
  },
  "build": {
    "appId": "this.is.tasky",
    "productName": "Tasky",
    "copyright": "Copyright Â© 2021 Alaso",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "package.json",
      "index.js",
      "src/**/*"
    ],
    "publish": [
      "github"
    ]
  }
}
